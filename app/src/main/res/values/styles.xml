<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/teal900</item>
        <item name="titleTextColor">@color/branco</item>
        <item name="subtitleTextColor">@color/branco2</item>
        <item name="colorControlNormal">@color/branco2</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="titleTextColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/teal900</item>
        <item name="editTextColor">@color/colorPrimary</item>
    </style>

    <style name="DialogDark" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="background">@color/grey60</item>
        <item name="titleTextColor">@color/grey60</item>
        <item name="android:textColor">@color/grey60</item>
        <item name="editTextColor">@color/grey60</item>
    </style>

    <style name="Edittext">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:inputType">numberPassword</item>
    </style>
    
    <style name="MyEditTextTheme">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

</resources>
